  const [testAnswers, setTestAnswers] = useState({});
  const [showTestResults, setShowTestResults] = useState(false);

  const levels = ['D√©butant', 'Interm√©diaire', 'Avanc√©', 'Elite'];
  
  const modules = {
    positionnement: {
      title: 'Positionnement',
      icon: Target,
      description: 'Ma√Ætrisez les positions d√©fensives optimales',
      color: 'bg-blue-500'
    },
    tirPasse: {
      title: 'Tir & Passe',
      icon: Zap,
      description: 'Perfectionnez vos tirs et passes d√©fensives',
      color: 'bg-green-500'
    },
    technique: {
      title: 'Technique',
      icon: Star,
      description: 'D√©veloppez vos comp√©tences techniques',
      color: 'bg-purple-500'
    },
    intelligence: {
      title: 'Intelligence de Jeu',
      icon: Brain,
      description: 'Am√©liorez votre lecture du jeu',
      color: 'bg-orange-500'
    }
  };

  const levelTests = {
    'D√©butant': {
      title: 'Test de Passage - Niveau Interm√©diaire',
      questions: [
        {
          question: "Quelle est la position optimale d'un d√©fenseur lors d'un 2 contre 1?",
